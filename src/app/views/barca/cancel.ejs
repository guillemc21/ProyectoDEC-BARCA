    <script>
        function validarForm() {
            email = cancelar.correo.value;
            re=/^([\da-z_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})$/

            if (cancelar.correo.value === '' && cancelar.nombre.value === '' && cancelar.apellido.value === '' && cancelar.ruta.value === 'Selecciona una ruta' && cancelar.telefono.value === '' && cancelar.fecha.value === ''){
                Swal.fire('Todos los campos estan vacios')
                return false;
            }
            else if (cancelar.correo.value === '') {
                Swal.fire('El campo de Gmail esta vacio')
                return false;
            }
            else if (cancelar.nombre.value === '') {
                Swal.fire('El campo de Nombre esta vacio')
                return false;
            }
            else if(cancelar.apellido.value === '') {
                Swal.fire('El campo de Apellido esta vacio')
                return false;
            }
            else if (cancelar.ruta.value === 'Selecciona una ruta') {
                Swal.fire('El campo de Ruta esta vacio')
                return false;
            }
            else if (cancelar.telefono.value === '') {
                Swal.fire('El campo de Telefono esta vacio')
                return false;
            }
            else if (cancelar.fecha.value === '') {
                Swal.fire('El campo de Fecha esta vacio')
                return false;
            }

            else if (!re.exec(email)){
                Swal.fire('El campo de Gmail es incorrecto')
                return false;
            }     

            else {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Dades enviades correctament',
                    showConfirmButton: false,
                    timer: 1500
                })
              
              
                Swal.fire({
                    title: 'Estas seguro de que lo quieres enviar ya?',
                    text: "Revisa muy bien tus datos",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Si,enviar ya!'
                }).then((result) => {
                    if (result.isConfirmed) {
                      Swal.fire(
                        'Enviado!',
                        'Tus datos han sido enviados correctamente.',
                        'success'
                      )
                    }
                })

            }
        }
    </script>
    
